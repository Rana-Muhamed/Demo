@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<br />
<br />

﻿

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="email" placeholder="search by name" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E =>E.Id)</td>
                <td>@Html.DisplayNameFor(E =>E.FName)</td>
                <td>@Html.DisplayNameFor(E =>E.LName)</td>
                <td>@Html.DisplayNameFor(E =>E.Email)</td>
                <td>@Html.DisplayNameFor(E =>E.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(E =>E.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M=> user.Id)</td>
                    <td>@Html.DisplayFor(M=> user.FName)</td>
                    <td>@Html.DisplayFor(M=> user.LName)</td>
                    <td>@Html.DisplayFor(M=> user.Email)</td>
                    <td>@Html.DisplayFor(M=> user.PhoneNumber)</td>
                    <td>@string.Join(" ",user.Roles)</td>

                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Users</h3>

    </div>
}




